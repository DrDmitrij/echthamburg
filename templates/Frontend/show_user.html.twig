{% extends 'base.html.twig' %}

{% block body %}
    {% if update %}
        <div class="success" style="background-color: green; color: white; padding: 10px; margin: 10px 0px; border-radius: 3px;">
            <i class="fas fa-times" style="float: right;"></i>
            <h3 style="margin: 0px 0px 5px 0px;">Änderungen erfolgreich</h3>
            <p style="margin: 0;">Ihre Änderungen wurden erfolgreich übernommen.</p>
        </div>
    {% endif %}
    <div class="body">
        <div class="user_details">
            <h3 style="margin: 0 0 15px 0;">Benutzer Details</h3>
            <form action="" method="post">
                <div>
                    <label>Vorname</label><br>
                    <input type="text" name="fname" value="{{ user.first_name }}">
                </div>
                <div>
                    <label>Nachname</label><br>
                    <input type="text" name="lname" value="{{ user.last_name }}">
                </div><br>
                <div>
                    <label>E-Mail</label><br>
                    <input type="text" name="email" value="{{ user.email }}">
                </div>
                <div>
                    <label>Gebutsdatum</label><br>
                    Geburtstag<input type="text" name="birthday" value="{{ user.date_of_birth }}">
                </div>
                <div>
                    <label>Rolle</label><br>
                    <input type="text" name="role" value="{{ user.role_id }}">
                </div>
                <button type="submit">Speichern</button>
            </form>
            <a href="{{ path('app_frontend_index') }}"><button >Abbrechen</button></a>
        </div>
        {% if gameCreated is not empty %}
            <div class="game_details">
                <h3 style="margin: 0 0 15px 0;">Entwickelte Spiele</h3>
                {% for game in gameCreated %}
                    <div>
                        <label>Spielename</label><br>
                        <input type="text" value=" {{ game.game_name }}">
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        {% if gameTested is not empty %}
        <div class="test_details">
            <h3 style="margin: 0 0 15px 0;">Getestete Spiele</h3>
            {% for game in gameTested %}
            <div>
                <label>Spielename</label><br>
                <input type="text" value=" {{ game.game_name }}">
            </div>
            <div>
                <label>Testdatum</label><br>
                <input type="text" value=" {{ game.date }}">
            </div>
            <div>
                <label>Eventname</label><br>
                <input type="text" value=" {{ game.event_name }}">
            </div>
            <div>
                <label>Name der Location</label><br>
                <input type="text" value=" {{ game.location_name }}">
            </div>
            {% endfor %}
        </div>
        {% endif %}
        {% if booking is not empty %}
        <div class="booking_details">
            <h3 style="margin: 0 0 15px 0;">Einkäufe</h3>
            {% for booked in booking %}
            <div>
                <label>Kaufdatum</label><br>
                <input type="text" value=" {{ booked.date }}">
            </div>
            <div>
                <label>Shopname</label><br>
                <input type="text" value=" {{ booked.shop_name }}">
            </div>
            <div>
                <label>Name der Location</label><br>
                <input type="text" value=" {{ booked.location_name }}">
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
{% endblock %}
